    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout0"
        android:id="@+id/layout1">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="20px"
            android:maxHeight="30mm"
            android:layout_height="220dp"
            android:text="@string/action_prev"
            android:adjustViewBounds="true"
            android:background="@drawable/prev_arrow"
            android:layout_weight=".2" />


        <ImageButton
            android:id="@+id/btnPlayOrPause"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/play"
            android:text="@string/action_play"
            android:layout_weight=".2" />


        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="20px"
            android:layout_height="220dp"
            android:text="@string/action_next"
            android:adjustViewBounds="true"
            android:background="@drawable/next_arrow"
            android:layout_weight=".2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout1">

        <ImageButton
            android:id="@+id/btnVolUp"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/vol_up"/>

        <ImageButton
            android:id="@+id/btnVolDown"
            android:layout_width="120dp"
            android:layout_marginTop="15dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/vol_down"/>

    </LinearLayout>

</RelativeLayout>
